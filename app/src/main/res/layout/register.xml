<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text_register"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="46dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_account"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:src="@drawable/logo_music_error"
        android:layout_centerInParent="true"
        android:layout_below="@id/text_register"
        android:layout_height="100dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:textSize="16sp"
        android:text="Choose image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/avatar_account"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/avatar_account"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="26dp"/>
        <EditText
            android:id="@+id/ed_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="User"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="PassWord"
            android:textSize="26dp"/>
        <EditText
            android:id="@+id/ed_pass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="PassWord"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="ConfigPass"
            android:textSize="26dp"/>
        <EditText
            android:id="@+id/ed_config_pass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="ConfigPass"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_gravity="center"/>
    </LinearLayout>
    </RelativeLayout>
</layout>