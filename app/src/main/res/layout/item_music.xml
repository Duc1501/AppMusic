<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ln_item_music"
        android:layout_marginTop="8dp"
        android:background="@drawable/backgroud_item_music_online"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_show_image"
                android:layout_width="44dp"
                android:layout_centerInParent="true"
                android:layout_height="44dp"
                android:src="@drawable/logo_music_error"/>
            <ImageView
                android:layout_width="48dp"
                android:background="@drawable/rectang_avatar"
                android:layout_centerInParent="true"
                android:layout_height="48dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="46dp">
            <TextView
                android:id="@+id/tv_name_baihat"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:layout_width="wrap_content"
                android:text="Name Bai Hat"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="#0A0A0A"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name_casi"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:text="name ca si"
                android:textSize="12sp"
                android:textColor="#9E9E9B"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/tv_name_baihat"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_time"
                android:text="4:23"
                android:textSize="12sp"
                android:layout_marginRight="4dp"
                android:textColor="#030303"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</layout>