<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/backgroud_item_music_online"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/im_image_avatar_online"
                android:layout_width="44dp"
                android:layout_centerInParent="true"
                android:layout_height="44dp"
                android:src="@drawable/logo_music_error" />
            <ImageView
                android:layout_width="48dp"
                android:background="@drawable/rectang_avatar"
                android:layout_centerInParent="true"
                android:layout_height="48dp"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="46dp">

            <TextView
                android:id="@+id/tv_name_song_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:text="Name Bai Hat"
                android:textColor="#0A0A0A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name_singer_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_song_online"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="name ca si"
                android:textColor="#9E9E9B"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</layout>