<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#682A61"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_level_song"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:text="01"
            android:fontFamily="serif"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:textColor="#445FF1"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_image_avatar_online"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/backgroud_item_music_online"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Thì Thôi"
                    android:textSize="18sp"
                    android:id="@+id/tv_home_name_song"
                    android:textColor="#fafafa"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_home_name_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reddy"
                    android:textColor="#E2E1E1"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_height="36dp"
            android:src="@drawable/ic_more_vert_white_24dp"
            />

    </LinearLayout>

</layout>